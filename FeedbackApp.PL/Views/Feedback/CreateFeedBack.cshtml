@model FeedbackApp.BLL.VMs.Feedback.FeedbackVM


@{
    ViewData["Title"] = "Feedback";
}


@if (User.Identity.IsAuthenticated)
{
    <p>Feedback page</p>

    <div class="registration-cssave">
        <form method="post" asp-controller="Feedback" asp-action="CreateFeedBack">
            <h3 class="text-center">Создать фидбэк</h3>
            <div class="form-group">
                <label asp-for="Text"></label><br />
                <input asp-for="Text">
                <span asp-validation-for="Text"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory"></label><br />
                <input asp-for="ProductCategory">
                <span asp-validation-for="ProductCategory"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName"></label><br />
                <input asp-for="ProductName">
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate"></label><br />
                <input asp-for="Rate">
                <span asp-validation-for="Rate"></span>
            </div>
            <div class="form-group">
                <button type="submit">Создать фидбэк</button>
            </div>
        </form>
    </div>

    <a asp-controller="Feedback" asp-action="FeedBackList">Список фидбэков</a>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}